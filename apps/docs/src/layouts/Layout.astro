---
import '../styles/global.css';
const {title = 'Docs'} = Astro.props;
---
<!DOCTYPE html>
<html lang="en" class="min-h-screen">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <script type="module" src="https://cdn.jsdelivr.net/npm/mermaid/dist/mermaid.esm.min.mjs"></script>
  </head>
  <body class="bg-base-200 text-base-content min-h-screen">
    <header class="navbar bg-base-100 shadow">
      <div class="flex-1 px-2 text-lg font-bold">
        <a href="/">Enterprise Platform Docs</a>
      </div>
      <div class="flex-none">
        <a href="https://github.com/example/repo" class="btn btn-ghost">GitHub</a>
      </div>
    </header>
    <div class="flex">
      <aside class="w-64 p-4 hidden md:block bg-base-100 border-r">
        <slot name="sidebar" />
      </aside>
      <main class="flex-1 p-4">
        <slot />
      </main>
    </div>
    <footer class="p-4 text-center bg-base-100 border-t">Â© 2024 Example Corp</footer>
  </body>
</html>
