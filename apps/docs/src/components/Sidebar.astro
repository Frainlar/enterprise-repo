---
const sections = Astro.props.sections || [];
---
<nav class="menu">
  {sections.map(section => (
    <div>
      <h3 class="menu-title">{section.title}</h3>
      <ul>
        {section.items.map(item => (
          <li><a href={item.href}>{item.title}</a></li>
        ))}
      </ul>
    </div>
  ))}
</nav>
